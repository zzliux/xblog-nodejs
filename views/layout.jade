doctype html
html
  head
    title #{siteTitle}
    block meta
    meta(name='viewport',charset='utf-8',content='width=device-width, initial-scale=1,maximum-scale=1, user-scalable=no')
    block link
    link(rel='stylesheet', href='/plugins/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet', href='/plugins/font-awesome/4.6.1/css/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    block script
    script(src='/plugins/jquery/2.2.3/jquery.min.js')
    script(src='/plugins/bootstrap/3.3.5/js/bootstrap.min.js')
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button',data-toggle='collapse',data-target='#bs-navbar-collapse' aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') zzliux's blog
        .collapse.navbar-collapse#bs-navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/article/9') About Me
          form.navbar-form.navbar-right(action='/search/s' role='search')
            .form-group
              input.form-control(type='text',name='word',autocomplete='off',placeholder='Keyword')
            .form-group
              button.btn.btn-default(type='submit') Search
    block content
