    link(href='/stylesheets/style.css', rel='stylesheet')
    script(src='/plugins/jquery/2.2.3/jquery.min.js')
    script(src='/plugins/bootstrap/3.3.5/js/bootstrap.min.js')
    link(rel='stylesheet', href='/plugins/editormd/css/editormd.min.css')
    title 撰写文章 - 后台管理
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') zzliux's blog
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/article/9') About Me
    .container-fluid
      .col-sm-2
        ul.list-group
          a.list-group-item(href='/admin') 总览
          a.list-group-item(href='/admin/article') 文章列表
          a.list-group-item(href='/admin/article/edit') 撰写文章
          a.list-group-item(href='/admin/upload') 上传图片
          a.list-group-item(href='#') 栏目5
      .container.col-sm-10
        .panel.panel-default
          .panel-heading 撰写文章
          .panel-body
            form.form-horizontal(action='', onsubmit='return false;')
              input#title.form-control(type='text', name='title', value='#{article.title}', placeholder='Title')
              #editormd
                textarea #{article.content}
              input#tags.form-control(type='text', name='tags', value='#{article.tags}', placeholder="标签,多个标签用','分隔")
              input#categories.form-control(type='text', name='categories', value='#{article.categories}', placeholder="分类,多个分类用','分隔")
              #msg
              input.btn.btn-primary(type='submit', onclick='check(0);', value='保存为草稿')
              - if(btn){
                | &nbsp;
                input.btn.btn-primary(type='submit', onclick='check(1);', value='发布')
                input.btn.btn-danger(type='submit', onclick='check(2);', style='float:right', value='删除')
              - }
    script(src='/plugins/editormd/editormd.min.js')
